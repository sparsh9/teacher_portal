<h1>Student List</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Subject</th>
    <th>Marks</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.subject %></td>
      <td><%= student.marks %></td>
      <td>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Add New Student', new_student_path %>
